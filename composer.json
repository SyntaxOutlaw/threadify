{
    "name": "lady-byron/threadify",
    "description": "A Flarum extension that adds threaded discussions with visual indentation.",
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8.0",
        "flarum/mentions": "^1.8.0"
    },
    "require-dev": {
        "flarum/testing": "^1.8.0"
    },
    "autoload": {
        "psr-4": {
            "SyntaxOutlaw\\Threadify\\": "src/"
        }
    },

    "extra": {
        "flarum-extension": {
            "title": "Flop Threadify",
            "category": "feature",
            "icon": {
                "name": "fas fa-list-tree",
                "backgroundColor": "#4D698E",
                "color": "#fff"
            }
        }
    }
}
